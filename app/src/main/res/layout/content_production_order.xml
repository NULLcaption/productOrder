                        android:textColor="@android:color/holo_blue_bright"
                        android:textSize="16sp">

                        <requestFocus/>


                    </EditText>
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
